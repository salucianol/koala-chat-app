@using Microsoft.AspNetCore.Identity
@using KoalaChatApp.ApplicationCore.Entities
@model IEnumerable<ChatRoom>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <strong>User: </strong>@User.Identity.Name
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr />
        </div>
    </div>
    <div class="row">
        @foreach (ChatRoom chatRoom in Model) {
            <div class="col-md-12">
                @Html.ActionLink(chatRoom.Name, "Index", "ChatRoom", new { @id = chatRoom.Id })
            </div>
        }
    </div>
</div>